// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Contest {
  NONE
  SUPERMOM
  CUTESTBABY
  SENIORCITIZEN
  GENERAL
}

model Registration {
  id               String   @id @default(cuid())
  name             String
  age              Int?
  whatsapp         String
  email            String?
  contest          Contest  @default(NONE)
  message          String?
  numberOfChildren Int?
  photoUrl         String?
  videoUrl         String?
  createdAt        DateTime @default(now())
  ipAddress        String?

  @@map("registrations")
}
